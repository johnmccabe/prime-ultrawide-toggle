{
  "name": "Prime Widescreen Toggle",
  "description": "True fullscreen for 21:10 Prime videos on ultra-widescreen 3440x1440 displays.",
  "version": "0.1.0",
  "minimum_chrome_version": "89",
  "permissions": [
    "declarativeContent",
    "activeTab"
  ],
  "background": {
    "scripts": ["js/widescreen.js"],
    "persistent": false
  },
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Alt+W"
      }
    }
  },
  "options_ui": {
    "page": "html/options.html",
    "chrome_style": true
  },
  "page_action": {
    "default_title": "Toggle Widescreen",
    "default_icon": {
      "19": "img/icon_off_19.png"
    }
  },
  "icons": {
    "19": "img/icon_off_19.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "manifest_version": 2
}